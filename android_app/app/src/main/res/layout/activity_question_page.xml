<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp4350.triviasmack.presentation.QuestionPageActivity">


    <Button
        android:text="option 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionBtn3"
        android:layout_marginBottom="52dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:onClick="processOptionButton"
        android:theme="@style/AppTheme.Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="option 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionBtn2"
        android:visibility="visible"
        android:onClick="processOptionButton"
        android:theme="@style/AppTheme.Button"
        android:layout_above="@+id/optionBtn3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="option 4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/optionBtn4"
        android:theme="@style/AppTheme.Button"
        android:onClick="processOptionButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="option 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/optionBtn1"
        android:theme="@style/AppTheme.Button"
        android:onClick="processOptionButton"
        android:layout_above="@+id/optionBtn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/timerTextView"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="TextView"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_above="@+id/optionBtn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Score: 0"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:id="@+id/scoreView"
        android:elevation="14dp" />

    <TextView
        android:text="Trivia Question goes here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:textSize="24sp"
        android:layout_marginBottom="33dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="#1f1f1f"
        android:textAlignment="center"
        android:layout_above="@+id/timerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/trivialogo"
        android:tint="@color/lightgrey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="570dp"
        android:layout_below="@+id/scoreView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />
</RelativeLayout>
