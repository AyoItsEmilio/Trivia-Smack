<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizbg2" >

    <ImageButton
        android:layout_width="252dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/player_1"
        android:id="@+id/singlePlayerBtn"
        android:scaleType="fitXY"
        android:theme="@style/AppTheme.Button"
        android:alpha="0.9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/multiPlayerBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/multiPlayerBtn"
        android:layout_marginLeft="23dp"
        android:onClick="questionPage"/>

    <ImageButton
        android:layout_width="252dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/player_2"
        android:id="@+id/multiPlayerBtn"
        android:scaleType="fitXY"
        android:theme="@style/AppTheme.Button"
        android:alpha="0.9"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"
        android:onClick="waitForPlayer"/>

    <TextView
        android:text="1 - Player"
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:theme="@style/AppTheme.Button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/singlePlayerBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/singlePlayerBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="2 - Player"
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:theme="@style/AppTheme.Button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/multiPlayerBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/multiPlayerBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Cannot find another player"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:id="@+id/waitingText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible" />

    <comp4350.triviasmack.business.GifImageView
        android:layout_centerInParent="true"
        android:id="@+id/GifImageView"
        android:background="@drawable/android"
        android:layout_width="1dp"
        android:layout_height="1dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/waitingText"
        android:layout_marginTop="191dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="192dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:visibility="invisible" />

    <Button
        android:text="Cancel"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:id="@+id/cancelBtn"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:theme="@style/AppTheme.Button"
        android:visibility="invisible"
        android:onClick="cancelWaitForPlayer"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/waitingText"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>