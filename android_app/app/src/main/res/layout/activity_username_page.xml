<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizbg2">

    <TextView
        android:text="Current Username"
        android:textColor="#7d79c4"
        android:textSize="30sp"
        android:background="#60000000"
        android:gravity="center_vertical"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:id="@+id/nameDescriptionText"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="312dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/usernameText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text=""
        android:textColor="#7d79c4"
        android:textSize="90sp"
        android:gravity="center"
        android:background="#60000000"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/usernameText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="65dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameDescriptionText"
        android:layout_marginEnd="65dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp" />

    <EditText
        android:layout_width="362dp"
        android:layout_height="63dp"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:hint="Enter Username"
        android:textColorHint="#a0a0a0"
        android:ems="10"
        android:imeOptions="actionDone"
        android:background="#60000000"
        android:id="@+id/editUsernameText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/confrimBtn"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:alpha="0.9"
        android:textColor="#FFFFFF"
        android:theme="@style/AppTheme.Button"
        android:id="@+id/confrimBtn"
        android:onClick="renderMainPage"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="58dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>