<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_game_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp4350groupa.triviasmack.EndGamePage">

    <TextView
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/player2dynText"
        android:layout_alignStart="@+id/player1dynScore"
        android:id="@+id/player2dynScore"
        android:textSize="36sp" />

    <TextView
        android:text="And the winner is.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="76dp"
        android:textSize="24sp"
        android:layout_below="@+id/player2dynText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/player1dynText"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <TextView
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player1dynScore"
        android:textSize="36sp"
        android:layout_alignBottom="@+id/player1dynText"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2dynText"
        android:textSize="30sp"
        android:layout_below="@+id/player1dynText"
        android:layout_alignStart="@+id/player1dynText"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/winnerDynText"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textSize="36sp" />
</RelativeLayout>
