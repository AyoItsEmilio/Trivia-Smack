<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp4350groupa.triviasmack.HomePage">

    <Button
        android:text="INSTANT PLAY"
        android:layout_width="match_parent"
        android:id="@+id/quickPlayBtn"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/leaderboardsBtn" />

    <Button
        android:text="Leaderboards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leaderboardsBtn"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/usernameBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="<USERNAME>"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameBtn"
        android:layout_above="@+id/settingsBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>
